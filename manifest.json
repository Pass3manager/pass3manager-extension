{
  "manifest_version": 3,
  "name": "Pass3Manager",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
 

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "*://*/*"
    ]
  
  
}